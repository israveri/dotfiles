# Shell
alias reload="exec zsh"

# Navigation
alias ..="cd .."
alias ...="cd ../.."

# Core
alias ls="eza --header --long --git --classify --group-directories-first --color=always"
alias lst="ls --tree --level=2"
alias lsa="ls --all"
alias lsta="lst --all"

# Applications
alias vim="nvim"

# Utilities
alias grep="grep --color=always"
